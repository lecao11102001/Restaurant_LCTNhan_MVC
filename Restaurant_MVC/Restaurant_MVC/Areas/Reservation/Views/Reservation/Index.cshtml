<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Book A Table
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-area="Reservation" asp-controller="Reservation" asp-action="MakeReservation" method="post">
                        <div>
                            <input style="display: none;" type="text" id="reservationId" name="CustomerId" class="form-control" value="@DataSharingService.GetSharedData("customerid")">
                        </div>
                        <div>
                            <input required type="text" name="Name" class="form-control" placeholder="Name" value="@DataSharingService.GetSharedData("name")">
                        </div>
                        <div>
                            <input required type="email" name="Email" class="form-control" placeholder="Email" value="@DataSharingService.GetSharedData("email")">
                        </div>
                        <div>
                            <input required type="text" name="Phone" class="form-control" placeholder="Phone" value="@DataSharingService.GetSharedData("phone")">
                        </div>
                        <div>
                            <input required type="date" name="Date" class="form-control" placeholder="Date">
                        </div>
                        <div>
                            <input required type="time" name="Time" class="form-control">
                        </div>
                        <div>
                            <input required type="number" name="NumberOfGuests" class="form-control" placeholder="NumberOfPeople">
                        </div>
                        <div>
                            <button id="btn_reservation" style="display: inline-block; padding: 10px 45px; background-color: #ffbe33; color: #ffffff; border-radius: 45px; -webkit-transition: all 0.3s; transition: all 0.3s; border: none; margin-top: 15px;">
                                Book Now
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            @*<div class="col-md-6">
