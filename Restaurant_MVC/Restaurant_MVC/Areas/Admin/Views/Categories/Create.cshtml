@* @model Restaurant_MVC.Entities.FoodCategory *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@inject IDataSharingService DataSharingService;
@using Restaurant_MVC.Models.SharedData;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var customerId = DataSharingService.GetSharedData("customerId");

}

<h1>Create</h1>

<h4>FoodCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <input style="display: none" value="@DateTime.Now.ToString("MM/dd/yyyy HH:mm:ss")" name="CreatedDate" class="form-control" />
            </div>
            <div class="form-group">
                <input style="display:none;" name="CreatedById" value="@customerId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

