@model Restaurant_MVC.Common.Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <div class="col-md-4">
            @foreach (var item in Model.GetAllReservations)
            {
                <form>
                    <div class="form-group">
                        <label class="control-label">Date</label>
                        <input name="Date" value="@item.Date?.ToString("dd/MM/yyyy")" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Time</label>
                        <input name="Time" value="@item.Time?.ToString("HH:mm:ss")" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">NumberOfGuests</label>
                        <input name="NumberOfGuests" value="@item.NumberOfGuests" class="form-control" />
                    </div>
                </form>
            }
        </div>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
