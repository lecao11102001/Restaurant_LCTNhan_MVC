@model Restaurant_MVC.Common.Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "CreateFoodItemEvent";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>CreateFoodItemEvent</h1>

<h4>FoodItemEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="control-label">FoodCategories</label>
            <form asp-action="CreateFoodItemEvent">
                <select name="selectedFoodCategory" class="form-control">
                    <option>Select Categories</option>
                    @foreach (var item in Model.ListFoodCategories)
                    {
                        <option value="@item.FoodCategoryId">@item.Name</option>
                    }
                </select>
                <input type="submit" value="Show" />
            </form>
        </div>
        <form asp-action="CreateFoodItemEvents">

            @* <div class="form-group">
                <label class="control-label">FoodName</label>
                <select name="FoodItemId" id="FoodItemId" class="form-control">
                    <option>Select Food</option>
                    @foreach (var item in Model.ListFoodItems)
