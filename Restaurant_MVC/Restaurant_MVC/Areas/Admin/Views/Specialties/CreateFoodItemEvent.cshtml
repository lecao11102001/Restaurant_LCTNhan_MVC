                        <option value="@item.EventId">@item.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" name="" value="" id="masterCheckbox" />
                        </th>
                        <th>
                            FoodName
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Select_ListFoodItems)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="childCheckbox" name="selectedFoodItems" value="@item.FoodItemId" />
                            </td>
