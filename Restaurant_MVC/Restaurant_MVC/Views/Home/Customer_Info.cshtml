    @Html.DisplayNameFor(model => model.ModifiedById)
    </dt>
    <dd class = "col-sm-10">
    @Html.DisplayFor(model => model.ModifiedById)
    </dd>
    <dt class = "col-sm-2">
    @Html.DisplayNameFor(model => model.DeleteDate)
    </dt>
    <dd class = "col-sm-10">
    @Html.DisplayFor(model => model.DeleteDate)
    </dd>
    <dt class = "col-sm-2">
    @Html.DisplayNameFor(model => model.DeleteById)
    </dt>
    <dd class = "col-sm-10">
    @Html.DisplayFor(model => model.DeleteById)
    </dd>*@
</dl>