@model Restaurant_MVC.Models.LoginModel
@using Restaurant_MVC.Models.SharedDataDictionary;
@inject IDataSharingService DataSharingService
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="middleSection" class="col" style="padding-left: 500px; padding-right: 500px;">
    <div class="row-md-4">
        <form asp-action="Login" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Username" style="color: white;" class="control-label"></label>
                <input required id="login_username" asp-for="Username" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" style="color: white;" class="control-label"></label>
                <input required id="login_password" asp-for="Password" type="password" class="form-control" />
                <label style="color: red;">@DataSharingService.GetSharedData("noti_err")</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

